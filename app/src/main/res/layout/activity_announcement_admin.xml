<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_new_class2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar_activity_new_class2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:contentScrim="?attr/colorPrimary"
        app:expandedTitleMarginStart="@dimen/activity_margin_content"
        app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
        app:expandedTitleGravity="bottom|left"
        app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

    <ImageView
        android:id="@+id/headerImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"
        android:transitionName="className"
        app:layout_collapseMode="parallax" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/new_class2_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/add_students_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="52dp"
                    android:background="@color/trans"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/add_students"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/string_add_students"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/add_students_image"
                    android:layout_marginStart="37dp"
                    android:text="Add Students"
                    android:textColor="#fff" />


                <ImageView
                    android:id="@+id/take_attendance_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="70dp"
                    android:layout_alignTop="@+id/add_students_image"
                    android:layout_toRightOf="@+id/add_students_image"
                    android:background="@color/trans"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/take_attendance"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/take_attendance_image"
                    android:layout_alignTop="@+id/string_add_students"
                    android:layout_marginStart="156dp"
                    android:gravity="center"
                    android:text="Attendance"
                    android:textColor="#fff" />

                <ImageView
                    android:id="@+id/marks_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_alignTop="@+id/take_attendance_image"
                    android:layout_toRightOf="@+id/take_attendance_image"
                    android:background="@color/trans"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/marks"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/marks_image"
                    android:layout_alignTop="@+id/string_add_students"
                    android:gravity="center"
                    android:layout_marginStart="275dp"
                    android:text="Marks"
                    android:textColor="#fff" />
            </RelativeLayout>

    </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/message_swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="505dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/messages_list"
            android:layout_width="match_parent"
            android:layout_height="505dp" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/announcement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="284dp"
        android:layout_marginTop="490dp"
        android:src="@drawable/announcement"
        app:fab_colorNormal="@color/colorPrimary"
        app:fab_colorPressed="@color/colorPrimary"
        app:fab_shadowXOffset="0dp"
        app:fab_shadowYOffset="0.5dp" />

</android.support.design.widget.CoordinatorLayout>
