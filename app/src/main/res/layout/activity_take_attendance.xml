<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddStudents"
    android:id="@+id/take_attendance_teacher">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary3"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/MyTheme3" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/attendance_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/mark_present"
        android:layout_alignParentTop="true"
        android:layout_marginTop="?android:attr/actionBarSize" />

    <Button
        android:id="@+id/mark_present"
        android:text="SUBMIT ATTENDANCE\nDATE: 19th Aug 2018"
        android:textColor="#fff"
        android:background="@color/colorPrimary3"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>