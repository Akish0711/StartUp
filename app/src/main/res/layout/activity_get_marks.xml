<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_get_marks"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_activity_get_marks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="@dimen/activity_margin_content"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Headline"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <ImageView
                android:id="@+id/headerImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:transitionName="testName"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/get_marks_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/view_detailed_marks"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="52dp"
        android:background="@color/trans"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/detailed_analysis_marks" />

            <TextView
                android:id="@+id/string_detailed_analysis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_students_image"
                android:layout_marginTop="102dp"
                android:layout_marginStart="50dp"
                android:text="@string/detailed_analysis"
                android:textAllCaps="true"
                android:textColor="#fff" />

    <ImageView
        android:id="@+id/update_marks"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/view_detailed_marks"
        android:layout_toRightOf="@+id/view_detailed_marks"
        android:layout_marginStart="90dp"
        android:background="@color/trans"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/take_attendance" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/update_marks"
        android:layout_marginEnd="58dp"
        android:gravity="center"
        android:text="@string/update_marks"
        android:textColor="#fff"
        android:layout_alignTop="@+id/string_detailed_analysis"
        />
</RelativeLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <ProgressBar
        android:id="@+id/progressBar7"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="49dp"
        android:indeterminateOnly="true"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/submit_marks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:background="@color/colorPrimary"
        android:text="@string/submit_marks"
        android:textColor="#fff"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/get_marks_list"
        android:layout_width="match_parent"
        android:layout_height="505dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</android.support.design.widget.CoordinatorLayout>